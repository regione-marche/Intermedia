<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="originalSoapMessageInHeaderInterceptor" class="it.extrasys.marche.regione.fatturapa.core.utils.cxf.interceptors.OriginalSoapMessageInHeaderInterceptor"/>

    <bean id="loggingInInterceptor" class="org.apache.cxf.interceptor.LoggingInInterceptor"/>

    <bean id="loggingOutInterceptor" class="org.apache.cxf.interceptor.LoggingOutInterceptor"/>


    <camelcxf:cxfEndpoint id="enti.inbound.cxf.endpoint.esito.fattura"
                           address="http://0.0.0.0:${enti.inbound.cxf.port}/${enti.inbound.cxf.url}"
                           serviceClass="it.extrasys.marche.regione.fatturapa.contracts.esito.fattura.from.enti.beans.RicezioneEsitoFatturaFromEnte">

        <camelcxf:properties>
            <entry key="dataFormat" value="POJO"/>
            <entry key="schema-validation-enabled" value="true"/>
            <entry key="loggingFeatureEnabled" value="false"/>
            <entry key="defaultOperationNamespace" value="http://fatturapa.marche.regione.it/esitoFatturaFromEnte/"/>
        </camelcxf:properties>

<!--

        <camelcxf:inInterceptors>
            <ref component-id="loggingInInterceptor"/>
        </camelcxf:inInterceptors>

        <camelcxf:outInterceptors>
            <ref component-id="loggingOutInterceptor"/>
        </camelcxf:outInterceptors>
-->


    </camelcxf:cxfEndpoint>


    <camelcxf:cxfEndpoint id="enti.inbound.cxf.endpoint.fatturazione.attiva.inoltra.fatture"
                          address="http://0.0.0.0:${enti.inbound.attiva.cxf.port}/${enti.inbound.attiva.cxf.url}"
                          serviceClass="it.extrasys.marche.regione.fatturapa.contracts.inoltro.fatturazione.attiva.beans.RiceviFilePort">

        <camelcxf:properties>
            <entry key="dataFormat" value="POJO"/>
            <entry key="loggingFeatureEnabled" value="true"/>
            <entry key="mtom-enabled" value="true"/>
            <entry key="schema-validation-enabled" value="false"/>
        </camelcxf:properties>


        <camelcxf:inInterceptors>
            <ref component-id="loggingInInterceptor"/>
        </camelcxf:inInterceptors>

        <camelcxf:outInterceptors>
            <ref component-id="loggingOutInterceptor"/>
        </camelcxf:outInterceptors>

<!--        <camelcxf:inInterceptors>
            <ref component-id="originalSoapMessageInHeaderInterceptor"/>
        </camelcxf:inInterceptors>-->

    </camelcxf:cxfEndpoint>

</blueprint>