<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


    <bean id="fattoRupHeaderProcessor"
          class="it.extrasys.marche.regione.fatturapa.enti.bridge.consiglio.processors.fatto.FattoRupHeaderProcessor">
        <property name="nomeRUP" value="${consiglio.operatorePaleo.nome}"/>
        <property name="cognomeRUP" value="${consiglio.operatorePaleo.cognome}"/>
        <property name="codiceUORUP" value="${consiglio.operatorePaleo.codiceUO}"/>
        <property name="ruoloRUP" value="${consiglio.operatorePaleo.ruolo}"/>
    </bean>

    <bean id="formattaDataCreazioneProcessor" class="it.extrasys.marche.regione.fatturapa.enti.bridge.consiglio.processors.fatto.FormattaDataCreazioneProcessor"/>

    <bean id="headerFilterStrategy" class="org.apache.camel.impl.DefaultHeaderFilterStrategy">
        <property name="outFilterPattern">

            <value>^((?!(Authorization|Content-Type|Accept-Encoding|Connection|Accept|User-Agent|Origin|Accept-Language|CamelHttpMethod)).)*$</value>
        </property>
        <!-- The 'relayHeaders' property is 'true' by default -->
    </bean>

    <bean id="datiFatturaManager"
          class="it.extrasys.marche.regione.fatturapa.persistence.unit.managers.DatiFatturaManager">
        <jpa:unit property="entityManagerFactory" unitname="persistence-unit"/>
        <property name="datiFatturaDao" ref="datiFatturaDao"/>
        <property name="statoFatturaDao" ref="statoFatturaDao"/>
        <property name="codificaStatiDao" ref="codificaStatiDao"/>
    </bean>

    <bean id="gestisciStatoFatturaProcessor"
          class="it.extrasys.marche.regione.fatturapa.enti.bridge.consiglio.processors.fatto.GestisciStatoFatturaProcessor">
        <property name="datiFatturaManager" ref="datiFatturaManager"/>
    </bean>
</blueprint>