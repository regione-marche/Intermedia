<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <camelcxf:cxfEndpoint id="RegistrazioneCAService"
                          serviceClass="it.marche.regione.intermediamarche.fatturazione.registrazione.services.IntermediaMarcheEnteServicePort"
                          address="http://127.0.0.1:8080">

        <camelcxf:properties>
            <entry key="dataFormat" value="POJO"/>
            <entry key="loggingFeatureEnabled" value="false"/>
            <entry key="defaultOperationNamespace" value="http://www.regione.marche.it/intermediamarche/fatturazione/registrazione/services"/>
        </camelcxf:properties>

        <camelcxf:inInterceptors>
            <ref component-id="loggingInInterceptor"/>
        </camelcxf:inInterceptors>

        <camelcxf:outInterceptors>
            <ref component-id="loggingOutInterceptor"/>
        </camelcxf:outInterceptors>

        <!-- Nel caso in cui non la basic auth non funzionasse provare con l'intercaptor da distemare! -->
        <!--
        <camelcxf:outInterceptors>
            <ref component-id="outboundSecurityInterceptor"/>
        </camelcxf:outInterceptors>
        -->

    </camelcxf:cxfEndpoint>
</blueprint>