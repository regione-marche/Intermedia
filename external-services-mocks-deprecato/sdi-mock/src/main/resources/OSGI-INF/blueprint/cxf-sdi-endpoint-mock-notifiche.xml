<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


	<camelcxf:cxfEndpoint id="sdi.inbound.cxf.endpoint.ricevi-notifiche" 
							address="http://0.0.0.0:${sdi.outbound.cxf.port}/${sdi.outbound.cxf.sdi.ricevi.notifiche.esito.context}"
							serviceClass="it.extrasys.marche.regione.fatturapa.contracts.sdi.ricevinotifica.beans.SdIRiceviNotifica">
		<camelcxf:properties>
			<entry key="dataFormat" value="POJO" />
			<entry key="schema-validation-enabled" value="false" />
			<entry key="loggingFeatureEnabled" value="true" />
			<entry key="mtom-enabled" value="true" />
		</camelcxf:properties>
		<camelcxf:inInterceptors>
			<bean class="org.apache.cxf.interceptor.LoggingInInterceptor" />
		</camelcxf:inInterceptors>

		<camelcxf:outInterceptors>
			<bean class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
		</camelcxf:outInterceptors>
	</camelcxf:cxfEndpoint>

</blueprint>